    </item>

    <item
        android:duration="1000"
        android:drawable="@drawable/ic_tap_phase_2"/>

    <item android:duration="400">
        <layer-list>
            <item android:drawable="@drawable/ic_tap_phase_2" />
            <item android:drawable="@drawable/ic_tap_hand" />
        </layer-list>
    </item>

    <item
        android:duration="1000"
        android:drawable="@drawable/ic_tap_phase_3"/>

    <item android:duration="400">
        <layer-list>
            <item android:drawable="@drawable/ic_tap_phase_3" />
            <item android:drawable="@drawable/ic_tap_hand" />
        </layer-list>
    </item>

    <item
        android:duration="2000"
        android:drawable="@drawable/ic_tap_phase_4"/>

