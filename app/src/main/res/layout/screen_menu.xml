<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ElevatedContainer"
        android:background="@color/colorPrimary"
        android:layout_margin="60dp"
        android:paddingTop="@dimen/biggerPadding"
        android:paddingLeft="@dimen/hugePadding"
        android:paddingRight="@dimen/hugePadding"
        android:paddingBottom="@dimen/hugePadding">

        <ImageView
            android:id="@+id/animation_main"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/biggerPadding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/animation_main"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/name_app"
                style="@style/Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/textColorOnPrimary" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:text="@string/app_desc"
                android:textColor="@color/textColorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/name_app" />

            <Button
                android:id="@+id/start_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/doublePadding"
                android:text="@string/button_start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description" />

        </android.support.constraint.ConstraintLayout>





    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
