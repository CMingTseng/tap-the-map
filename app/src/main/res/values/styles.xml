<resources
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Default activity behaviour -->
        <item name="android:windowBackground">@color/colorPrimary</item>

        <!-- Make fullscreen -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!-- Widgets -->
        <item name="buttonStyle">@style/BaseButton</item>
    </style>

    <!-- Text -->

    <style name="OnPrimaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorOnPrimary</item>
    </style>

    <style name="HeaderText" parent="OnPrimaryText">
        <item name="fontPath">fonts/Nunito-ExtraBold.ttf</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
    </style>

    <style name="SubHeaderText" parent="OnPrimaryText">
        <item name="android:textSize">@dimen/subheaderTextSize</item>
    </style>

    <!-- Widgets -->

    <style name="ElevatedContainer" parent="TextAppearance.AppCompat">
        <item name="android:elevation">3dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="BaseButton" parent="ElevatedContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/standardPadding</item>
        <item name="android:paddingLeft">@dimen/biggerPadding</item>
        <item name="android:paddingRight">@dimen/biggerPadding</item>
        <item name="android:paddingBottom">@dimen/biggerPadding</item>
        <item name="android:background">@color/colorBackgroundLight</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ZoomButton" parent="ElevatedContainer">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">@dimen/standardPadding</item>
        <item name="android:layout_marginTop">@dimen/standardPadding</item>
        <item name="android:background">@color/colorBackgroundLight</item>
        <item name="android:padding">@dimen/halfPadding</item>
    </style>

    <style name="LegendEntry" parent="ElevatedContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/standardPadding</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@color/colorBackgroundLight</item>
    </style>

    <style name="LegendColor">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="LegendText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/standardPadding</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
